<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.yogibaba.www.yogibaba">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".search.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".videoTab.videodetail.VideoDetailActivity"
            android:label="@string/title_activity_video_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TempActivity" />
        <activity
            android:name=".shoppingtab.shoppingdetail.ShoppingDetailActivity"
            android:label="@string/title_activity_shopping_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
